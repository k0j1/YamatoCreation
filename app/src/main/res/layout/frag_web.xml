<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/WebLayout"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yamatocreation.view.WebSiteView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/WebUnderLayout"/>

    <!-- ボタン -->
    <RelativeLayout
        android:id="@+id/WebUnderLayout"
        android:background="#88000000"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/web_btn_layout_size"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <!-- 戻るボタン -->
        <ImageView
            android:id="@+id/web_back_btn"
            android:layout_width="@dimen/web_btn_size"
            android:layout_height="@dimen/web_btn_size"
            android:layout_margin="@dimen/web_btn_margin"
            android:src="@drawable/web_back" />

        <!-- 進むボタン -->
        <ImageView
            android:id="@+id/web_next_btn"
            android:layout_width="@dimen/web_btn_size"
            android:layout_height="@dimen/web_btn_size"
            android:layout_margin="@dimen/web_btn_margin"
            android:layout_toRightOf="@+id/web_back_btn"
            android:src="@drawable/web_next" />

        <TextView
            android:id="@+id/web_go_site_text"
            android:layout_width="100dip"
            android:layout_height="@dimen/web_btn_size"
            android:layout_margin="@dimen/web_btn_margin"
            android:background="@drawable/bk_list"
            android:gravity="center"
            android:text="@string/WEB_GO_SITE"
            android:textColor="#fff"
            android:layout_alignTop="@+id/web_next_btn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>

</RelativeLayout>